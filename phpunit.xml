<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./tests/bootstrap.php" verbose="true">
	<php>
		<ini name="memory_limit" value="2048M" />
	</php>

	<testsuite name="Release">
		<directory>./tests/src</directory>
		<exclude>./vendor</exclude>
	</testsuite>

	<filter>
		<blacklist>
			<directory>./vendor</directory>
		</blacklist>
	</filter>

	<logging>
		<log type="coverage-html" target="/tmp/kisma/report" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70" />
		<log type="coverage-clover" target="/tmp/kisma/coverage.xml" />
		<log type="coverage-php" target="/tmp/kisma/coverage.serialized" />
		<log type="junit" target="/tmp/kisma/logfile.xml" logIncompleteSkipped="true" />
		<log type="json" target="/tmp/kisma/logfile.json" />
		<log type="tap" target="/tmp/kisma/logfile.tap" />
		<log type="testdox-html" target="/tmp/kisma/testdox.html" />
		<log type="testdox-text" target="/tmp/kisma/testdox.txt" />
	</logging>
</phpunit>
