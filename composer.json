{
	"name":         "kisma/kisma",
	"description":  "A Fun-Sized PHP Framework",
	"keywords":     [
		"php", "php5", "rest", "mvc", "framework"
	],
	"homepage":     "https://github.com/lucifurious/kisma",
	"type":         "library",
	"license":      "MIT",
	"authors":      [
		{
			"name":  "Jerry Ablan",
			"email": "jerryablan@gmail.com"
		}
	],
	"require":      {
		"twig/twig":       "1.*",
		"twig/extensions": "dev-master"
	},
	"suggest":      {
		"monolog/monolog": "1.*"
	},
	"repositories": [
		{
			"type":    "package",
			"package": {
				"name":        "twitter/bootstrap",
				"description": "twitter bootstrap",
				"version":     "dev-master",
				"dist":        {
					"url":  "http://twitter.github.com/bootstrap/assets/bootstrap.zip",
					"type": "zip"
				}
			}
		}
	],
	"scripts":      {
		"post-update-cmd":      "\\Kisma\\Utility\\Composer::postUpdate",
		"post-package-install": [
			"\\Kisma\\Utility\\Composer::postPackageInstall"
		]
	},
	"autoload":     {
		"psr-0": {
			"Kisma": "src/"
		},
		"files": ["src/autoload.php"]
	}
}
